{
    "name": "Hextris",
    "id": "hextris",
    "packaging_format": 1,
    "description": {
        "en": "A fast paced puzzle game.",
        "fr": "Un jeu de puzzle très rapide"
    },
    "version": "1.1~ynh2",
    "url": "http://hextris.github.io/",
    "license": "GPL-3.0",
    "maintainer": {
        "name": "opi",
        "email": "opi@zeropi.net"
    },
    "requirements": {
        "yunohost": ">= 3.5.0"
    },
    "multi_instance": true,
    "services": [
        "nginx"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain for Hextris",
                    "fr": "Choisissez un domaine pour Hextris"
                },
                "example": "domain.org"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for Hextris",
                    "fr": "Choisissez un chemin pour Hextris"
                },
                "example": "/hextris",
                "default": "/hextris"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public application?",
                    "fr": "Est-ce une application publique ?"
                },
                "help": {
                    "en": "If enabled, Hextris will be accessible by people who doesn't have an account. This can be changed later via the webmin."
                    "fr": "Si cette case est cochée, Hextris sera accessible aux personnes n'ayant pas de compte. Vous pourrez changer ceci plus tard via le webmin."
                "default": true
            }
        ]
    }
}
