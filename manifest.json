{
    "name": "Hextris",
    "id": "hextris",
    "packaging_format": 1,
    "description": {
        "en": "A fast paced puzzle game.",
        "fr": "Un jeu de puzzle tr√®s rapide"
    },
    "maintainer": {
        "name": "opi",
        "email": "opi@zeropi.net"
    },
    "version": "1.1",
    "url": "http://hextris.github.io/",
    "categories": [
        "games"
    ],
    "multi_instance": "false",
    "services": [
        "nginx"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain for Hextris",
                    "fr": "Choisissez un domaine pour Hextris"
                },
                "example": "domain.org"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for Hextris",
                    "fr": "Choisissez un chemin pour Hextris"
                },
                "example": "/hextris",
                "default": "/hextris"
            },
            {
                "name": "is_public",
                "ask": {
                    "en": "Is it a public site ?",
                    "fr": "Est-ce un site public ?"
                },
                "choices": ["Yes", "No"],
                "default": "Yes"
            }
        ]
    }
}
